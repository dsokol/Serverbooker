@{
    ViewBag.Title = "About";

}

    <h2>@ViewBag.Title.</h2>
    <h3>@ViewBag.Message</h3>

    <p>Use this area to provide additional information.</p>
<script src="http://localhost:59277/Home/About"></script>

    <div ng-app='serverApp' ng-controller="serverCtrl">
        <table> 
            <tr>
                <th>ServerID</th>
                <th>Status</th>
                <th>ServerName</th>
                <th>Environment</th>
                <th>ActiveBookingID</th>
            </tr>
            <tr ng-repeat="x in ServerInfo">
                <td> {{ x.ServerID }} </td>
                <td> {{ x.Status }} </td>
                <td> {{ x.ServerName }} </td>
                <td> {{ x.Environment }} </td>
                <td> {{ x.ActiveBookingID }} </td>
           
            </tr>
        </table>

    </div> 
<script>
        //alert('test');
        var serverApp = angular.module('serverApp', []);
        serverApp.controller('serverCtrl', function ($scope, $http) {
            $http.get('/Home/ServerInfo')
                .then(function (data) {
                    $scope.serverinfo = data;
                });
        });
        
                

</script>

