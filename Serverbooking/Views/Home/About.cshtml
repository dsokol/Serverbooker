@{
    ViewBag.Title = "About";

}

    <h2>@ViewBag.Title.</h2>
    <h3>@ViewBag.Message</h3>

    <p>Use this area to provide additional information.</p>
    <div ng-app="">
        <p>Name : <input type="text" ng-model="name" placeholder="Enter name here" /></p>
        <h1>Hello {{name}}!</h1>
    </div>
    <script>
        var Serverbooking = angular.module('Serverbooking', []);
        Serverbooking.controller('ServerController', ['$scope', function ($scope, $http) {
            $http.get('http://localhost:59277/Home/ServerInfo')
                .success(function (data) {
                $scope.serverinfo = data.ServerInfo;
            });
        }]);
        
    </script>
    <div ng-app='myApp' ng-controller="ServerController">
        <table>
            <tr>
                <th>ServerId</th>
                <th>Status</th>
                <th>ServerName</th>
                <th>Environment</th>
                <th>ActiveBookingID</th>
            </tr>
            <tr ng-repeat="serverinfo in ServerInfo">
                <td>{{serverinfo.ServerID}}</td>
                <td>{{serverinfo.Status}}</td>
                <td>{{serverinfo.ServerName}}</td>
                <td>{{serverinfo.Environment}}</td>
                <td>{{serverinfo.ActiveBookingID}}</td>
            </tr>
        </table>

    </div>

