@*@model IEnumerable<Serverbooking.Models.InfoServer>
@{
    ViewBag.Title = "Data";
    Layout = "~/Views/Home/Data.cshtml";
}*@

<style>
    table {
    border-collapse: collapse;
    width: 100%;
}

th, td {
    text-align: left;
    padding: 8px;
}

tr:nth-child(even){background-color: #f2f2f2}

th {
    background-color:  #4682B4;
    color: white;
}
a.my-class {
    color: white;
}
</style>
<br />
<h2>Server Information</h2>
<table>
    <tr>
        <th>
            ServerID
        </th>
        <th>
           Status
        </th>
        <th>
           ServerName
        </th>
        <th>
             Environment
        </th>
        <th>
          ActiveBookingID
        </th>
        <th>

            @Html.ActionLink("Book A Server", "BookingData", "Home", new { @class = "my-class" })
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.ServerID
            </td>
            <td>
                @item.Status
            </td>
            <td>
                @item.ServerName
            </td>
            <td>
                @item.Environment
            </td>
            <td>
                @item.ActiveBookingID
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ServerID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ServerID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ServerID })
                </td>
        </tr>
    }

</table>
